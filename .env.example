# OS Names API Key (get from https://osdatahub.os.uk/)
# Required for postcode geocoding
OS_NAMES_API_KEY=your_api_key_here

# Database configuration
# Path where DuckDB database file will be stored
DATABASE_PATH=./data/police_events.duckdb

# Initial sync (set to false for Railway deployment to avoid timeout)
# Set to true only for local development if you want sync on startup
INITIAL_SYNC=false

# Cache configuration (in hours)
# How long to cache calendar feeds before refreshing
CACHE_TTL_HOURS=3

# Sync configuration (in days)
# How often to automatically sync neighbourhood boundaries
# Default is 7 days (weekly)
SYNC_INTERVAL_DAYS=7

# Logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Sentry DSN for error monitoring (optional)
# Leave commented out if not using Sentry
# SENTRY_DSN=https://your-sentry-dsn-here
